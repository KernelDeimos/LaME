#!/bin/bash

set -e

echo "['log', 'envrc.start']"

if [ ! -d "./env" ]; then
	echo "['log', 'new-directory', './env']"
	mkdir ./env
fi

echo "['log', 'set-environment.go.start']"
export GOPATH="$(pwd)/env/go"
echo "['log', 'set-environment.go.end']"


if [ ! -d "./.local" ]; then
	echo "['log', 'new-directory', './.local']"
	mkdir ./.rosewood
fi

if [ -f "./.local/todo" ]; then
	echo ""
	echo "=== TODO List ==="
	cat ./.local/todo
	echo ""
fi

echo "['log', 'envrc.end']"
